<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextViewLargeApplicationSub"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="ห้อง : "
            android:textSize="55dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_dete"
        style="@style/TextViewLargeApplicationSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="วันที่แจ้งซ่อม"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_detail"
            style="@style/TextViewLargeApplicationSub"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="อารการที่เสีย : "
            android:textSize="25dp" />
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/til_test_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="อาการที่ตรวจเจอ" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioButton
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ดำเนินการเรียบร้อย" />

    <RadioButton
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รอเปลี่ยนอะไหล่" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp">


        <Button
            android:id="@+id/Bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บันทึก" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ยกเลิก" />
    </LinearLayout>


</LinearLayout>