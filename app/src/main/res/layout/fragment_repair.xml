<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="ข้อมูลส่วนตัว"
            android:textSize="30dp"
            android:textStyle="italic" />

    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/not"
            android:background="@drawable/custorm_input"
            android:gravity="center"
            android:hint="หน่วยงาน" />

        <Spinner
            style="@style/not"
            android:background="@drawable/custorm_input"
            android:id="@+id/bar_spinner_room"
            android:textAlignment="center" />

        <Spinner
            style="@style/not"
            android:background="@drawable/custorm_input"
            android:id="@+id/bar_spinner_device"
            android:textAlignment="center" />


        <Spinner
            android:id="@+id/bar_spinner_device_name"
            android:background="@drawable/custorm_input"
            style="@style/not"
            android:textAlignment="center" />


        <Spinner
            android:id="@+id/bar_spinner_problem"
            android:background="@drawable/custorm_input"
            style="@style/not"
            android:textAlignment="center"  />

        <LinearLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                style="@style/not"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custorm_input"
                android:gravity="start"
                android:hint="รายละเอียด" />

        </LinearLayout>

        <Button

            style="@style/not"
            android:layout_gravity="center"
            android:textColor="#8F2F2F"
            android:background="@drawable/custorm_input"
            android:text="แจ้งซ่อม" />

    </LinearLayout>

</LinearLayout>