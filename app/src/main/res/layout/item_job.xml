<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@id/relativeLayout"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    app:contentPadding="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">



    <GridLayout
        style="@style/MatchWrap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:id="@+id/tv_dete_job"
            android:textSize="18sp"
            style="@style/TextViewLargeApplicationSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:text="วันที่แจ้งซ่อม" />

        <TextView
            android:id="@+id/tv_agency_job"
            android:textSize="18sp"
            style="@style/TextViewLargeApplicationSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="หน่วยงาน" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_room_job"
            style="@style/TextViewLargeApplicationSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="left"
            android:text="ห้อง" />

        <TextView
            android:id="@+id/tv_problem_job"
            android:textSize="18sp"
            style="@style/TextViewLargeApplicationSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:text="อาการที่เสีย" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">



    </LinearLayout>



</LinearLayout>


    </androidx.cardview.widget.CardView>